@model SampleEntityFramework.DomainModels.Students.StudentDetailsModel

@{
    ViewBag.Title = "Student - " + Model.LastName + ", " + Model.FirstName + " [" + Model.StudentId + "]";
    var pageCount = (int)Math.Ceiling(
        Model.TotalCourses / (float)Model.PageSize);
}

<h2>Student <small>@Model.LastName, @Model.FirstName [@Model.StudentId]</small></h2>
<p>Enrollment Date: @Model.EnrollmentDate.ToShortDateString()</p>

<section>
    <header>
        <h3>Courses</h3>
    </header>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Credits</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td><a href="@Url.Action("Course", new {Id = course.CourseId})">@course.Title</a> [@course.CourseId]</td>
                    <td>@course.Credits</td>
                    <td>@course.Grade</td>
                </tr>
            }
        </tbody>
    </table>

    @if (pageCount > 1)
    {
        <nav class="pagination">
            <ul>
                @for (var i = 1; i <= pageCount; i += 1)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="active"><span>@i</span></li>
                    }
                    else
                    {
                        <li>@Html.ActionLink(i.ToString(), "Student", new { pageSize = Model.PageSize, page = i })</li>
                    }
                }
            </ul>
        </nav>
    }
</section>
