@using SampleEntityFramework.DomainModels.Courses
@using SampleEntityFramework.SchoolWeb.Models

@model CoursesModel

@{
    ViewBag.Title = "Courses";
    var pagination = new PaginationViewModel<CourseListModel>
    {
        Action = "Index",
        Controller = "Course",
        Data = Model,
    };
}

<section>
    <header><h2>Courses</h2></header>

    @if (Model.Data.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Credits</th>
                    <th>Students</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model.Data)
                {
                    <tr>
                        <td><a href="@Url.Action("Detail", new {Id = course.CourseId})">@course.Title</a> [@course.CourseId]</td>
                        <td>@course.Credits</td>
                        <td>@course.EnrollmentCount</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No courses registered.</p>
    }

    @Html.Partial("_Pagination", pagination)
</section>
